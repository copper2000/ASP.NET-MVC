@model Model.EF.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Cập nhật thông tin người dùng
}
<head>
    <title>Cập nhật</title>
</head>
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Chỉnh sửa tài khoản</h1>
                            </div>
                            @using (Html.BeginForm("Edit", "User", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <form class="user">
                                    <div class="form-group row">
                                        <div class="col-sm-12">
                                            @*<input type="text" class="form-control form-control-user" id="exampleLastName" placeholder="Last Name">*@
                                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control form-control-user", @id = "exampleLastName", @placeholder = "Họ và tên" })
                                            @Html.ValidationMessageFor(model => model.Name)
                                        </div>

                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-12">
                                            @*<input type="text" class="form-control form-control-user" id="exampleLastName" placeholder="Last Name">*@
                                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-user", @id = "exampleLastName", @placeholder = "Mật khẩu", @type = "password" })
                                            @Html.ValidationMessageFor(model => model.Password)
                                        </div>
                                    </div>                                    
                                    <div class="form-group row">
                                        <div class="col-sm-12">
                                            @*<input type="email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Email Address">*@
                                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Địa chỉ" })
                                            @Html.ValidationMessageFor(model => model.Address)
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-12">
                                            @Html.TextBoxFor(model => model.ModifiedBy, new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Chỉnh sửa bởi" })
                                            @Html.ValidationMessageFor(model => model.ModifiedBy)
                                        </div>                                        
                                    </div>                                                                        
                                    @*<a href="login.html" type="" class="btn btn-primary btn-user btn-block">
                                            Register Account
                                        </a>*@
                                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Cập nhật tài khoản" />
                                </form>
                            }                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*<div>
                @Html.ActionLink("Back to List", "Index")
            </div>*@
    </div>